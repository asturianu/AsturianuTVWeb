@model IEnumerable<AsturianuTV.Infrastructure.Data.Models.Blog>
@{
    Layout = "_AdminLayout";
}
<h1><a href="" id="back"></a></h1>

<div class="crud">
    <div class="crud-content top">
        <div class="crud-info">
            <p class="info">Герой: </p>
            <p class="info">Описание: </p>
            <p class="info">Здоровье: </p>
            <p class="info">Аттрибут: </p>
        </div>
        <div class="crud-action">
            <p>Действия</p>
        </div>
    </div>
</div>

@foreach (var item in Model)
{
<section class="crud">
    <div class="accordion">
        <div class="crud-content">
            <div class="crud-info">
                <p class="info">@item.Title</p>
                @if (item.Plan == null)
                {
                    <p class="info">План не создан</p>
                }
                else
                {
                    <p class="info">@item.Plan.Name</p>
                }

            </div>
            <div class="crud-action">
                <a class="link-crud" asp-action="Details" asp-controller="Blog" asp-route-id="@item.Id">
                    <img class="icon-crud" src="~/assets/icons8-информация.svg" alt="Alternate Text" />
                </a>
                <a class="link-crud" asp-action="Edit" asp-controller="Blog" asp-route-id="@item.Id">
                    <img class="icon-crud" src="~/assets/icons8-редактировать.svg" alt="Alternate Text" />
                </a>
                <a class="link-crud" asp-action="Delete" asp-controller="Blog" asp-route-id="@item.Id">
                    <img class="icon-crud" src="~/assets/icons8-удалить.svg" alt="Alternate Text" />
                </a>
            </div>
        </div>
    </div>
    <div class="panel character-skill">
       
    </div>
</section>
}
<a class="create-title" asp-action="Create" asp-controller="Blog">Create</a>
@section CharacterStyles{
    <link href="~/css/character.css" rel="stylesheet" />
}

@section CharacterScripts{
    <script src="~/js/character.js"></script>
}