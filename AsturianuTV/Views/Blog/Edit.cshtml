@model AsturianuTV.Dto.BlogDto
    Layout = "_AdminLayout";
}
}
<h1><a href="" id="back"></a></h1>
<form asp-action="Edit" asp-controller="Skill" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Название: </label>
        <input class="field" type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Название: </label>
        <input class="field" type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PlanId" class="control-label">Выберите подписку</label>
        <select class="select" asp-for="PlanId">
            <option disabled>Выбрать подписку</option>
            @foreach (var plan in Model.Plans)
            {
                <option value="@plan.Id">@plan.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>