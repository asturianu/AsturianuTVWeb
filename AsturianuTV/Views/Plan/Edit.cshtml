@model AsturianuTV.Dto.PlanDto
@{
    Layout = "_AdminLayout";
}
}
<h1><a href="" id="back"></a></h1>
<form asp-action="Edit" asp-controller="Plan" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SubscriptionId" class="control-label">Выберите подписку</label>
        <select class="select" asp-for="SubscriptionId">
            <option disabled>Выбрать подписку</option>
            @foreach (var subscription in Model.Subscriptions)
            {
                <option value="@subscription.Id">@subscription.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>