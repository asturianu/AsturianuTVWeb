@model AsturianuTV.ViewModels.RegisterModel
@{
    Layout = "_SignInLayout";
}

<div class="container">
    <form class="box" asp-action="Register"
          asp-controller="Account"
          asp-antiforgery="true">
        <h4>DotaHelper</h4>
        <h5>Create your account.</h5>

        <input type="text" asp-for="Surname" placeholder="Surname" />
        <span asp-validation-for="Surname"></span>

        <input type="text" asp-for="Name" placeholder="Name" />
        <span asp-validation-for="Name"></span>

        <input type="text" asp-for="Email" placeholder="Email" />
        <span asp-validation-for="Email"></span>

        <input asp-for="Password" placeholder="Password" />
        <span asp-validation-for="Password"></span>

        <div class="confirm-wrapper">
            <input type="submit" value="Sign up" class="btn1">
            <a asp-controller="Account" asp-action="Login" class="dnthave">Do you have an account? Sign in</a>
        </div>

        <div class="validation" asp-validation-summary="ModelOnly"></div>
    </form>
</div>