@model AsturianuTV.ViewModels.RegisterModel
@{
    Layout = "_SignInLayout";
}

@section RegisterStyles {
    <link href="~/css/login.css" rel="stylesheet" />
}

<div class="animated bounceInDown">
    <div class="container">
        <span class="error animated tada" id="msg"></span>
        <form asp-action="Register"
              asp-controller="Account"
              asp-antiforgery="true"
              class="box">
            <h4>DotaHelper</h4>
            <h5>Sign in to your account.</h5>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
           
            <input type="text" asp-for="Surname" placeholder="Surname"/>
            <input type="text" asp-for="Name" placeholder="Name"/>
            <input type="text" asp-for="Email" placeholder="Email"/>
            <input asp-for="Password" placeholder="Password"/>
            <input asp-for="ConfirmPassword" placeholder="ConfirmPassword"/>

            <div class="confirm-wrapper">
                <a href="#" class="forgetpass">Forget Password?</a>
                <input type="submit" value="Sign in" class="btn1">
                <a asp-controller="Account" asp-action="Login" class="dnthave">Do you have an account? Sign in</a>
            </div>

        </form>
    </div>

</div>

@section RegisterScripts {
    <script src="~/js/auth.js"></script>
}