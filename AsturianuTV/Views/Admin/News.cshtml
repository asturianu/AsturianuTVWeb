@model List<AsturianuTV.Infrastructure.Data.Models.ContentNews.News>
@{
    Layout = "_AdminLayout";
}

<div>
    <div class="admin-content-block-top">
        <h2 class="admin-content-block-title">News</h2>
        <a asp-controller="News" asp-action="Create">
            Create new news
        </a>
    </div>
    <table id="tableId" class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Is Ready</th>
                <th>League</th>
                <th>Team</th>
                <th>Player</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.IsReady</td>
                    <td>@item?.League?.Name</td>
                    <td>@item?.Team?.Name</td>
                    <td>@item?.Player?.FullName</td>
                    <td class="table-actions">
                        <a class="table-action"
                           asp-controller="News"
                           asp-action="Edit"
                           asp-route-id="@item.Id">
                            <img class="table-action-img" src="~/assets/icons8-редактировать.svg" alt="Alternate Text" />
                        </a>
                        <form asp-controller="News"
                              asp-action="Delete"
                              method="post">
                            <input type="hidden" name="Id" value="@item.Id" />
                            <button class="table-action" type="submit" name="delete">
                                <img class="table-action-img" src="/assets/icons8-мусор (1).svg" alt="Alternate Text" />
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>