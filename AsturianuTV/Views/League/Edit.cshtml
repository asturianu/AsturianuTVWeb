@using AsturianuTV.Services.Interfaces

@inject ITeamService teamService
@model AsturianuTV.Infrastructure.Data.Models.Cybersports.League
@{
    var teams = await teamService.GetAllTeams();
}
@{
    Layout = "_AdminLayout";
}

<form class="admin-form" asp-action="Edit" asp-controller="League" asp-route-id="@Model.Id" enctype="multipart/form-data">
    <h2 class="form-title">Edit league</h2>
    <div class="form-groups">
        <div class="form-group">
            <label class="text-field-label" asp-for="Name">Name</label>
            <input class="text-field-input" type="text" asp-for="Name" />
        </div>
        <div class="form-group">
            <label class="text-field-label" asp-for="Logo">Logo</label>
            <input class="text-field-input" type="text" asp-for="Logo" />
        </div>
    </div>
    <div class="form-groups">
        <div class="form-group">
            <label class="text-field-label" asp-for="Description">Description</label>
            <textarea class="text-field-textarea" type="text" asp-for="Description"></textarea>
        </div>
        <div class="form-group">
            <label class="text-field-label" asp-for="PriceFound">Price pool</label>
            <input class="text-field-input" type="text" asp-for="PriceFound" />
        </div>
    </div>
    <div class="form-groups">
        <div class="form-group">
            <label class="text-field-label" asp-for="StartDate">Start date</label>
            <input class="text-field-input" asp-for="StartDate" type="date" />
        </div>
        <div class="form-group">
            <label class="text-field-label" asp-for="EndDate">End date</label>
            <input class="text-field-input" asp-for="EndDate" type="date" />
        </div>
    </div>

    <input type="hidden" asp-for="LeagueTeams.Select(x => x.TeamId).ToList()" />

    <div class="form-group">
        <label asp-for="LeagueTeams.Select(x => x.TeamId).ToList()">Select teams:</label>
        <select asp-for="LeagueTeams.Select(x => x.TeamId).ToList()" multiple>
            @foreach (var team in teams)
            {
                <option value="@team.Id">@team.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <button class="save-button" type="submit">
            Save
        </button>
    </div>
</form>