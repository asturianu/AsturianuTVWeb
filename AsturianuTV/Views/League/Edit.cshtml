@model AsturianuTV.Infrastructure.Data.Models.Cybersports.League
@{
    Layout = "_AdminLayout";
}


<form class="form" asp-action="Create" asp-controller="League" enctype="multipart/form-data">

    <h2 class="form-title">Create league</h2>

    <div class="form-group">
        <label class="text-field-label" asp-for="Name">Name</label>
        <input class="text-field-input" type="text" asp-for="Name" />
    </div>
    <div class="form-group">
        <label class="text-field-label" asp-for="Logo">Logo</label>
        <input class="text-field-input" type="text" asp-for="Logo" />
    </div>
    <div class="form-group">
        <label class="text-field-label" asp-for="Description">Description</label>
        <textarea class="text-field-textarea" type="text" asp-for="Description"></textarea>
    </div>
    <div class="form-group">
        <label class="text-field-label" asp-for="PriceFound">Price pool</label>
        <input class="text-field-input" type="text" asp-for="PriceFound" />
    </div>
    <div class="form-group">
        <label class="text-field-label" asp-for="StartDate"></label>
        <input class="text-field-input" asp-for="StartDate" type="date" />
    </div>
    <div class="form-group">
        <label class="text-field-label" asp-for="EndDate"></label>
        <input class="text-field-input" asp-for="EndDate" type="date" />
    </div>

   
    <div class="form-group">
        <input type="submit" value="Send" />
    </div>
</form>