@model AsturianuTV.Infrastructure.Data.Models.Cybersports.Team
@{
    Layout = "_AdminLayout";
}

<form class="form" asp-action="Edit" asp-controller="Team" asp-route-id="@Model.Id" enctype="multipart/form-data">
    <h2 class="form-title">Update team</h2>
    <div class="form-groups">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input  type="text" asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Logo">Logo</label>
            <input  type="text" asp-for="Logo" />
        </div>
    </div>
    <div class="form-groups">
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea class="text-field-textarea" type="text" asp-for="Description"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="StartDate">Start date</label>
            <input  asp-for="StartDate" type="date" />
        </div>
    </div>
    <div class="form-groups">
        <div class="form-group">
            <label asp-for="FullPrice">Cash</label>
            <input  asp-for="FullPrice" type="text" />
        </div>
        <div class="form-group">
            <label asp-for="Country">Country</label>
            <input  asp-for="Country" type="text" />
        </div>
    </div>
    <div class="form-group">
        <button class="save-button" type="submit">
            Save
        </button>
    </div>
</form>
