@using AsturianuTV.Services.Interfaces
@inject ITeamService teamService
@model AsturianuTV.ViewModels.System.PlayerViewModels.CreatePlayerViewModel
@{
    var teams = await teamService.GetAllTeams();
}
@{
    Layout = "_AdminLayout";
}


<form class="admin-form" asp-action="Create" asp-controller="Player" enctype="multipart/form-data">
    <h2 class="form-title">Create player</h2>
    <div class="form-groups">
        <div class="form-group">
            <label asp-for="FullName">FullName</label>
            <input class="field" type="text" asp-for="FullName" />
        </div>
        <div class="form-group">
            <label asp-for="Logo">Logo</label>
            <input class="field" type="text" asp-for="Logo" />
        </div>
    </div>
    <div class="form-groups">
        <div class="form-group">
            <label asp-for="Country">Country</label>
            <input type="text" asp-for="Country" />
        </div>

        <div class="form-group">
            <label asp-for="FullPrice">FullPrice</label>
            <input type="text" asp-for="FullPrice" />
        </div>
    </div>
    <div class="form-groups">
        <div class="form-group">
            <label asp-for="Matches">Matches</label>
            <input class="field" type="text" asp-for="Matches" />
        </div>
        <div class="form-group">
            <label asp-for="Wins">Wins</label>
            <input class="field" type="text" asp-for="Wins" />
        </div>
    </div>
    <div class="form-groups">
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea type="text" asp-for="Description"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Bday"></label>
            <input asp-for="Bday" type="date" />
            <select asp-for="TeamId" size="1">
                <option value="null">Without team</option>
                @foreach (var team in teams)
                {
                    <option value="@team.Id">@team.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <input type="submit" value="Send" />
    </div>
</form>
