@model AsturianuTV.Infrastructure.Data.User
@{
    Layout = "_Layout";
}

<form class="form" asp-action="UpdateProfile" asp-controller="User" asp-route-id="@Model.Id">

    <h2 class="form-title">Edit user</h2>

    <div class="form-group">
        <label class="text-field-label" asp-for="Surname">Surname</label>
        <input class="text-field-input" type="text" asp-for="Surname" />
    </div>
    <div class="form-group">
        <label class="text-field-label" asp-for="Name">Name</label>
        <input class="text-field-input" type="text" asp-for="Name" />
    </div>
    <div class="form-group">
        <label class="text-field-label" asp-for="Email">Email</label>
        <input class="text-field-input" type="text" asp-for="Email" />
    </div>
    <div class="form-group">
        <label class="text-field-label" asp-for="PhoneNumber">Phone number</label>
        <input class="text-field-input" type="text" asp-for="PhoneNumber"/>
    </div>
    <div class="form-group">
        <label class="text-field-label" asp-for="SteamProfileId">Steam profile</label>
        <input class="text-field-input" asp-for="SteamProfileId" type="text" />
    </div>
    <div class="form-group">
        <label class="text-field-label" asp-for="Password">Password</label>
        <input class="text-field-input" asp-for="Password" type="password" />
    </div>

    <div class="form-group">
        <input type="submit" value="Send" />
    </div>
</form>