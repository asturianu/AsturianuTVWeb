@model AsturianuTV.Infrastructure.Data.Models.Character
@{
    Layout = "_AdminLayout";
}
}
<h1><a href="" id="back"></a></h1>
<form asp-action="Edit" asp-controller="Skill" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Health" class="control-label">Здоровье</label>
        <input type="text" asp-for="Health" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>